---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Dental Services near me',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Dental Services"
    title="Comprehensive Dental Care at Life.Dental"
    subtitle="We offer a wide range of dental services tailored to meet all your oral health needs. From preventive care to advanced restorative treatments, our experienced team is here to help you achieve a healthy, confident smile."
    actions={[{ variant: 'primary', target: '_blank', text: 'Book an Appointment', href: '/contact/' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Dental Services Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Explore Our Dental Services"
    subtitle="At Life.Dental, we provide comprehensive dental services to ensure your smile remains healthy and beautiful. Browse through our list of services and see how we can help you achieve your oral health goals."
    columns={3}
    items={[
      {
        title: 'Dental Cleaning',
        description: "Our routine dental cleanings help remove plaque, tartar, and stains, ensuring a healthier smile. Regular cleanings prevent gum disease and cavities, keeping your teeth in optimal condition.",
        callToAction: {
          text: 'Learn More',
          href: '/cleaning/'
        }
      },
      {
        title: 'Deep Cleaning',
        description: "If you suffer from gum disease, deep cleaning (scaling and root planing) helps remove bacteria beneath the gumline to restore gum health and prevent further damage.",
        callToAction: {
          text: 'Learn More',
          href: '/deepcleaning/'
        }
      },
      {
        title: 'Root Canal Treatment',
        description: "When a tooth's pulp becomes infected or inflamed, a root canal can save the tooth by removing the damaged tissue and sealing it to prevent further issues.",
        callToAction: {
          text: 'Learn More',
          href: '/rct/'
        }
      },
      {
        title: 'Dental Crowns',
        description: "Restore the strength, shape, and appearance of damaged teeth with custom-made crowns. Our crowns are designed to blend seamlessly with your natural teeth.",
        callToAction: {
          text: 'Learn More',
          href: '/crown/'
        }
      },
      {
        title: 'All-on-X Implants',
        description: "All-on-X dental implants offer a permanent, secure solution for replacing missing teeth. With just four to six implants, you can restore a full arch of teeth with a hybrid denture.",
        callToAction: {
          text: 'Learn More',
          href: '/allonx/'
        }
      },
      {
        title: 'Dental Bridge',
        description: "A dental bridge helps close gaps caused by missing teeth. It restores both function and appearance, ensuring you can eat and speak comfortably.",
        callToAction: {
          text: 'Learn More',
          href: '/bridge/'
        }
      },
      {
        title: 'Dental Implants',
        description: "Dental implants are the gold standard for tooth replacement. These titanium posts fuse with the jawbone, providing a secure foundation for crowns or bridges.",
        callToAction: {
          text: 'Learn More',
          href: '/implant/'
        }
      },
      {
        title: 'Implant Crown & Bridge',
        description: "Implant-supported crowns and bridges provide a long-lasting solution for missing teeth, offering both stability and a natural look.",
        callToAction: {
          text: 'Learn More',
          href: '/implantcrown/'
        }
      },
      {
        title: 'Tooth Extraction',
        description: "When a tooth is severely damaged or decayed, an extraction may be necessary. We ensure a painless experience and provide post-care to aid in recovery.",
        callToAction: {
          text: 'Learn More',
          href: '/extraction/'
        }
      },
      {
        title: 'Dentures',
        description: "We offer both partial and full dentures to replace missing teeth, restoring your ability to chew and speak while enhancing the appearance of your smile.",
        callToAction: {
          text: 'Learn More',
          href: '/denture/'
        }
      },
      {
        title: 'Invisalign',
        description: "Invisalign offers a nearly invisible way to straighten teeth without the need for traditional braces. It's a comfortable, effective solution for aligning your smile.",
        callToAction: {
          text: 'Learn More',
          href: '/invisalign/'
        }
      },
    ]}
  />

  <!-- Call to Action *************** -->

  <CallToAction
    title="Ready to Improve Your Smile?"
    subtitle="Whether you need a routine cleaning or advanced restorative care, Life.Dental is here to provide exceptional dental services. Schedule your appointment today and let us help you achieve a healthy, confident smile."
    actions={[{ variant: 'primary', target: '_blank', text: 'Book an Appointment', href: '/contact/' }]}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
  title="Patient testimonials"
  subtitle="Discover what patients have to say about their experiences working with us."
  testimonials={[
    {
      testimonial: `The staff was friendly, knowledgeable and caring. They always had a smile to share.  Dr Ketan was very professional and patient with me.`,
      name: 'Jim',
      image: {
        alt: 'Jim ',
      },
    },
    {
      testimonial: `Excellent coordination from staff and removal of wisdom tooth from Dr.Ken. Highly recommend this dental practice to anyone`,
      name: 'Paul',
      image: {
        alt: 'Paul',
      },
    },
    {
      testimonial: ` Dr. Ketan and staff are very professional and competent! This is patient centered dentistry. I am pleased with the work they did in making a crown for a front tooth.`,
      name: 'Diane',
      image: {
        alt: 'Patient testimonial',
      },
    },
 
  ]}
/>
  
</Layout>
